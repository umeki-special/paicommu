<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>投稿フォーム</title>
  <!-- ml5.jsの読み込み -->
  <script src="https://cdn.jsdelivr.net/npm/ml5@latest/dist/ml5.min.js"></script>
</head>
<body>
  <div class="contents row">
    <div class="container">
      <h3>投稿する</h3>
      <button id="generatePrompt">お題を生成</button>
      <%= form_with(model: @drawing, local: true) do |form| %>
        <!-- ニックネーム入力欄 -->
        <%= form.text_area :text, placeholder: "text", rows: "10" %>
        <%= form.submit "SEND" %>
      <% end %>
      <!-- お題生成ボタン -->
    </div>
  </div>

  <script>
    // AIによるお題生成（ml5.jsの利用）
    document.getElementById('generatePrompt').addEventListener('click', function() {
      let rnn = ml5.charRNN('models/woolf/', modelReady);

      function modelReady() {
        console.log('RNNモデルが読み込まれました');
        rnn.generate({ seed: '描いてください', temperature: 0.5, length: 50 }, (err, result) => {
          if (err) {
            console.error(err);
          } else {
            // ニックネーム入力フィールドにAI生成テキストを挿入
            document.getElementById('nickname-field').value = result.sample;
          }
        });
      }
    });
  </script>
</body>
</html>
